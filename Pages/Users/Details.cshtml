@page
@model LindnerAirlines.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
}
 
<div class="bgim">
    <h1>Details of a User</h1>

    <div class="p-2">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Address)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn  btn-sm btn-primary" asp-page="./Edit" asp-route-id="@Model.User?.Id">Edit</a> |
        <a class="btn  btn-sm btn-warning" asp-page="./Index">Back to List</a>
    </div>

</div>
