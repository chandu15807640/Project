@model LindnerAirlines.Pages.Flights.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div class="bgim">
    <h1>Delete a Flight from Inventory</h1>

    <h3>Are you sure you want to delete this Flight?</h3>
    <hr />
    <div class="p-2">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Flight.FlightNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Flight.FlightNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Flight.Source)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Flight.Source)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Flight.Destination)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Flight.Destination)
            </dd>
        </dl>

    </div>
    
    <form method="post">
        <input type="hidden" asp-for="Flight.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn  btn-sm btn-warning" asp-page="./Index">Back to List</a>
    </form>

    <br /> 
    <br />
    <br />
</div>
